{{ 'subscribe-podcasts.css' | asset_url | stylesheet_tag }}

<section class="subscribe-podcasts">
  <h2 class="podcast-title">{{ section.settings.title }}</h2>
  <a href="{{ section.settings.link }}">{{ section.settings.link_text }}</a>
  <div class="podcast-image">
    {% for block in section.blocks %}
      <img
        src="{{ block.settings.image | image_url }}"
        alt="{{ block.settings.image.alt }}"
        height="{{ block.settings.image.height }}"
        width="{{ block.settings.image.width }}"
      >
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Subscribe Podcasts",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "Disponible sur toutes les plateformes d'Ã©coutes"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Button label",
      "default": "s'abonner au podcast"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Subscribe Podcasts"
    }
  ]
}
{% endschema %}
