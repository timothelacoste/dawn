      "settings": [
        {
          "type": "text",
          "id": "actual-offer",
          "label": "Actual offer"
        }
      ]
    },
    {
      "type": "advantage-product",
      "name": "Advantage product",
      "settings": [
        {
          "type": "image_picker",
